<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      {% if title %}{{ title }} · {{ site.title }}{% else %}{{ site.title }}{% endif %}
    </title>
    <meta name="description" content="{{ site.description }}" />
    <link rel="icon" type="image/png" href="/oq_favicon_black_v1.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="stylesheet" href="/assets/css/styles.css" />
  </head>
  <body class="page-{{ page.fileSlug or 'home' }}">
    <div class="app-shell">
      <nav class="nav">
        <div class="container">
          <div class="nav-content">
            <a class="logo" href="/">
              <img src="/logo.svg" alt="OpenQuality logo" />
              <span>{{ site.title }}</span>
            </a>
            <a class="logo-badge" href="/soon/">Soon</a>
            <button
              class="nav-toggle"
              type="button"
              aria-label="Toggle navigation"
              aria-expanded="false"
              aria-controls="site-nav-links"
              data-nav-toggle
            >
              <span></span>
              <span></span>
              <span></span>
            </button>
            <div class="nav-links" id="site-nav-links" data-nav-links>
              {% for item in site.nav %}
                <a
                  href="{{ item.url }}"
                  {% if not item.external and page.url == item.url %}aria-current="page"{% endif %}
                  {% if item.external %}target="_blank" rel="noreferrer"{% endif %}
                >
                  {% if item.label == 'GitHub' %}
                    <svg class="nav-github-icon" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                      <path
                        d="M12 .5C5.65.5.5 5.65.5 12c0 5.1 3.3 9.4 7.9 10.9.6.1.8-.3.8-.6v-2.1c-3.2.7-3.9-1.4-3.9-1.4-.5-1.2-1.2-1.5-1.2-1.5-1-.7.1-.7.1-.7 1.1.1 1.7 1.2 1.7 1.2 1 .1 1.8.8 2.3 1 .1-.7.4-1.1.7-1.4-2.5-.3-5.1-1.3-5.1-5.6 0-1.2.4-2.1 1.1-2.9-.1-.3-.5-1.5.1-3.1 0 0 .9-.3 3 .1a10.7 10.7 0 0 1 5.4 0c2-.4 3-.1 3-.1.6 1.6.2 2.8.1 3.1.7.8 1.1 1.7 1.1 2.9 0 4.2-2.6 5.3-5.1 5.6.4.3.8 1 .8 2v3c0 .3.2.7.8.6 4.6-1.5 7.9-5.8 7.9-10.9C23.5 5.6 18.4.5 12 .5Z"
                      />
                    </svg>
                  {% endif %}
                  {{ item.label }}
                </a>
             {% endfor %}
            </div>
          </div>
        </div>
      </nav>

      <main>
        {% if hero %}
          {% include "components/hero.njk" %}
        {% endif %}
        <div class="container">
          {{ content | safe }}
        </div>
      </main>

      <footer class="footer">
        <div class="container">
          <div class="footer-content">
            <div class="footer-logo">
              <img src="/logo.svg" alt="OpenQuality" />
              <span>{{ site.title }}</span>
            </div>
            <div class="footer-links">
              {% for item in site.footerLinks %}
                <a href="{{ item.url }}">{{ item.label }}</a>
              {% endfor %}
            </div>
          </div>
          <div class="footer-bottom">
            <p>MIT License · Open Source Test Management Platform</p>
          </div>
        </div>
      </footer>
    </div>
    <script type="module" src="/assets/js/nav.js" defer></script>
    {% if hero %}
      <script type="module" src="/assets/js/lightning.js" defer></script>
    {% endif %}
  </body>
</html>
