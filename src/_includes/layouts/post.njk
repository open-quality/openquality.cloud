---
layout: layouts/base.njk
---
<article class="blog-post">
  {% set imageSource = page.inputPath | replace('.md', '.jpg') %}
  {% if imageSource | assetExists %}
    <figure class="blog-post-media">
      <img class="blog-post-image" src="{{ page.filePathStem }}.jpg" alt="{{ title }}" loading="lazy" />
    </figure>
  {% endif %}
  <header class="blog-post-header">
    <p class="blog-post-date">{{ page.date | readableDate }}</p>
    <h1>{{ title }}</h1>
    {% if summary %}
      <p class="blog-post-summary">{{ summary }}</p>
    {% endif %}
  </header>
  <div class="blog-post-content">
    {{ content | safe }}
  </div>
